{
    "manifest_version": 3,
    "name": "YouTube Miniplayer & Picture-in-Picture Extension",
    "version": "0.5",
    "description": "Adds custom miniplayer and picture-in-picture buttons to YouTube.",
    "permissions": [
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://www.youtube.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "YT Mini Player Extension Options"
    }
}